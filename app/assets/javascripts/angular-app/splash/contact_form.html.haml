#feedback-form.modal.fade.in{'ng-controller': 'ContactFormCtrl'}
  .modal-header
    %button.close{'data-dismiss': 'modal'} x
    %h3.text-center Contact Us
  .modal-body
    .form-horizontal
      %fieldset
        .form-group
          .col-xs-12
            .input-group
              %span.input-group-addon
                %i.glyphicon.glyphicon-user
              %input.form-control{placeholder: 'Name', type: 'text', 'ng-model': 'user.name'}
        .form-group
          .col-xs-12
            .input-group
              %span.input-group-addon
                %i.glyphicon.glyphicon-envelope
              %input.form-control{placeholder: 'E-Mail Address', type: 'text', 'ng-model': 'user.email'}
        .form-group
          .col-xs-12
            .input-group
              %span.input-group-addon
                %i.glyphicon.glyphicon-pencil
              %textarea.form-control{placeholder: 'Message', type: 'text', rows: 4, 'ng-model': 'user.text'}
        .form-group
          .col-xs-12
            %button.btn.btn-primary.pull-right{'data-dismiss': 'modal'} Send


