!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Webpage Productivity Classifier'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Webpage Productivity Classifier'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{'ng-app':'wpc', 'ng-controller': 'HomeCtrl'}
    #wrapper
      = render 'layouts/navigation'
    #page-wrapper
      = render 'layouts/messages'
      .unobtrusive-flash-container
      = yield
  =render 'pages/login_modal'
  =render 'pages/sign_up_modal'