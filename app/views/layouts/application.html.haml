!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Stay Productive'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Webpage Productivity Classifier'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body#page-top{'ng-app':'wpc'}
    = render 'layouts/navigation'
    %obal{'ui-view': ''}

  =render 'pages/login_modal'
  =render 'pages/sign_up_modal'