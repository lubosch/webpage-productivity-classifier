<div class="modal fade in" id="sign_up">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">x</button>
    <h3 class="text-center"> Sign Up</h3>
  </div>
  <div class="modal-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
            <%= f.email_field :email, :autofocus => true, placeholder: 'Email Address', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
            <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
            <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <div><%= f.submit "Sign Up", :class => 'btn btn-lg btn-block btn-primary' %></div>
          <p>

          <div><a href="#login" data-toggle="modal" data-dismiss="modal">Sign in</a></div>
          <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                  <div>
                    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
                  </div>
              <% end -%>
          <% end -%>

          </p>
        </div>
        </div>
    <% end %>
    </div>
</div>

